
<% 
    if (typeof search === 'undefined') search = '';
    if (typeof category === 'undefined') category = '';
%>


<style>
.search-btn {
  background-color: #fe424d;
  color: #fff;
  border-radius: 0 20px 20px 0;
  border: none;
  padding: 0.35rem 0.9rem;
  font-size: 0.9rem;
}

.search-btn:hover {
  background-color: #fe424d;
  color: #fff;
}

.search-inp {
  border-radius: 20px 0 0 20px;
  padding: 0.35rem 0.9rem;
  font-size: 0.9rem;
  border: none;
  width: 180px;
  border: 1px solid black;   
}

.input-group {
  display: flex;
}
</style>



<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
        <li class="nav-item d-md-none">
          <a class="nav-link" href="/listings/new">WanderLust your home</a>
        </li>
      </ul>

      <form class="d-flex" role="search" action="/listings" method="GET">
        <input class="form-control me-2 search-inp" 
              type="search" 
              name="search" 
              placeholder="Search listings..." 
              value="<%= search %>">

        <% if (category) { %>
            <input type="hidden" name="category" value="<%= category %>">
        <% } %>

        <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> Search
        </button>
      </form>





      <ul class="navbar-nav ms-auto mb-2 mb-md-0">
        <li class="nav-item d-none d-md-block">
          <a class="nav-link" href="/listings/new">WanderLust your home</a>
        </li>
        <% if(!currUser){ %>
          <li class="nav-item">
            <a class="nav-link" href="/signup"><b>SignUp</b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login"><b>Log In</b></a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><b>Log Out</b></a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
